    ViewData["Title"] = "Панель администратора";
}

@inject AppDbContext _appDbContext
@using FiSharing.Infrastructure.Data
@model DeportamentViewModel

<button type="button" data-bs-toggle="modal" data-bs-target="#addModal" class="btn btn-primary">
    <i class="bi bi-plus-square-fill"></i> Добавить
</button>

<table class="table">
    <thead>
    <tr>
        <th>Название депортамента</th>
        <th>Пользователи</th>
        <th>Файлы</th>
        <th>Дейсвтия</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            @foreach (var item in _appDbContext.Departments)
            {
                <p>item.Name</p>
            }
        </td>
        <td>
            
        </td>
        <td></td>
        <td>
            <button type="button"  data-bs-toggle="modal" data-bs-target="#editModal" class="btn btn-primary">Изменить</button>
            <button class="btn btn-primary" style="margin-left: 5px;">Удалить</button>
        </td>
    </tr>
    </tbody>
</table>

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Изменить</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
