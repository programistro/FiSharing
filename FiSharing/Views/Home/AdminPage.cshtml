@{
    ViewData["Title"] = "Панель администратора";
}

@inject AppDbContext _context
@using FiSharing.Infrastructure.Data
@model DeportamentViewModel

<link rel="stylesheet" href="css/table-style.css"/>
<link rel="stylesheet" href="js/table.js"/>

<button type="button" data-bs-toggle="modal" data-bs-target="#addModal" class="btn btn-primary">
    <i class="bi bi-plus-square-fill"></i> Добавить
</button>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Название депортамента</th>
        <th>Пользователи</th>
        <th>Файлы</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var department in _context.Departments)
    {
        <tr>
            <td>@department.Name</td>
            <td>
                <details>
                    <summary>Подробнее</summary>
                    <div class="details-content">
                        <ul>
                            @foreach (var user in department.Users)
                            {
                                <li>@user</li>
                            }
                        </ul>
                    </div>
                </details>
            </td>
            <td>
                <details>
                    <summary>Подробнее</summary>
                    <div class="details-content">
                        <ul>
                            @foreach (var file in department.PathsToFiles)
                            {
                                <li>@file</li>
                            }
                        </ul>
                    </div>
                </details>
            </td>
            <td>
                <button type="button" data-bs-toggle="modal" data-bs-target="#addFileModal" class="btn btn-primary" 
                        onclick="setDepartmentName('@department.Name')">Добавить файлы</button>
                <button type="button" data-bs-toggle="modal" data-bs-target="#removeFileModal" class="btn btn-primary"
                        onclick="setDepartmentName('@department.Name')">Удалить файлы</button>
                <button class="btn btn-primary" style="margin-left: 5px;">Удалить</button>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="modal fade" id="removeFileModal" tabindex="-1" aria-labelledby="removeFileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="removeFileModalLabel">Изменить</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <form enctype="multipart/form-data" method="post" asp-action="RemoveFileFromDepartament" asp-controller="Home">
                <input type="hidden" id="departmentNameInput" asp-for="Name" />
                <div class="modal-body">
                    @* <div class="mb-3"> *@
                    @*     <ul class="list-group"> *@
                    @*         <li class="list-group-item"> *@
                    @*             <input class="form-check-input me-1" type="checkbox" value="" aria-label="..."> *@
                    @*             First checkbox *@
                    @*         </li> *@
                    @*     </ul> *@
                    @* </div> *@
                    <input class="form-control" aria-required="true" placeholder="Напишите название файла, чтобы его удалить"
                           style="margin-top: 10px;" asp-for="FileName"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Удалить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="addFileModal" tabindex="-1" aria-labelledby="addFileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addFileModalLabel">Изменить</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <form enctype="multipart/form-data" method="post" asp-action="AddFileToDepartament" asp-controller="Home">
                <input type="hidden" id="departmentNameInput" asp-for="Name" />
                <div class="modal-body">
                    <div class="mb-3">
                        <input type="file" multiple class="form-control" aria-label="Выберите файл" asp-for="Files" required>
                        <div class="invalid-feedback">Файл не выбран</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Добавить файлы</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <form enctype="multipart/form-data" method="post" asp-action="AddDepartament" asp-controller="Home">
                <div class="modal-body">
                    <div class="mb-3">
                        <input type="file" multiple class="form-control" aria-label="Выберите файл" asp-for="Files" required>
                        <div class="invalid-feedback">Файл не выбран</div>
                        
                        <input type="text" class="form-control" aria-label="Название депортамента" asp-for="Name" required style="margin-top: 5px;"/>
                        
                        <input type="password" class="form-control" aria-label="Пароль для депортамента" asp-for="Password" style="margin-top: 5px;"/>
                        
                        <input type="hidden" asp-for="User" value="@User.Identity.Name" style="margin-top: 5px;"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

