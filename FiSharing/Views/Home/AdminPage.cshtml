<script>
    function setDepartmentName(name) {
        document.getElementById('departmentNameInput').value = name;
    }
</script>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
        font-family: 'Arial', sans-serif;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
        background-color: #fff;
        transition: background-color 0.3s ease;
    }

    td:hover {
        background-color: #f8f9fa;
    }

    .details-content {
        margin-top: 10px;
        padding-left: 15px;
        opacity: 0;
        transform: translateY(-10px);
        transition: all 0.3s ease-out;
    }

    details[open] .details-content {
        opacity: 1;
        transform: translateY(0);
    }

    .summary {
        cursor: pointer;
        color: #333;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 4px 8px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .summary:hover {
        background-color: #f0f0f0;
    }

    .summary::marker {
        content: '+ ';
        font-weight: bold;
        color: #007bff;
    }

    .details[open] .summary::marker {
        content: '- ';
    }

    .details-content ul {
        list-style-type: none;
        padding-left: 20px;
        margin: 0;
    }

    .details-content li {
        color: #666;
        padding: 4px 0;
        border-bottom: 1px dashed #eee;
    }

    .details-content li:last-child {
        border-bottom: none;
    }

    /* Темная тема */
    body.dark-theme {
        --bg-color: #1a1a1a;
        --text-color: #fff;
        --hover-bg: #2d2d2d;
    }

    body.dark-theme th, body.dark-theme td {
        background-color: var(--bg-color);
        color: var(--text-color);
    }

    body.dark-theme td:hover {
        background-color: var(--hover-bg);
    }

    body.dark-theme .summary:hover {
        background-color: #333;
    }
</style>