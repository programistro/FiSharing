            @*     <div class="modal-footer"> *@
            @*         <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button> *@
            @*         <button type="submit" class="btn btn-primary">Сохранить</button> *@
            @*     </div> *@
            @* </form> *@
        </div>
    </div>
</div>

<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Добавить файлы</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <form enctype="multipart/form-data" method="post" asp-action="AddDepartament" asp-controller="Home">
                <div class="modal-body">
                    <div class="mb-3">
                        <input type="file" multiple class="form-control" aria-label="Выберите файл" asp-for="Files" required>
                        <div class="invalid-feedback">Файл не выбран</div>
                        
                        <input type="text" class="form-control" aria-label="Название депортамента" asp-for="Name" required/>
                        
                        <input type="password" class="form-control" aria-label="Пароль для депортамента" asp-for="Password"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>